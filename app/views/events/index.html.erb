<div class="top-hero-container">
  <div class="container">
    <h1>イベント</h1>
    <div class="row">
    <div class="col-md-9"></div>
      <div class="col-md-3">
      <%= form_tag(events_index_path,:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag '  検索  ', :name => nil %>
      <% end %>
      </div>
      <br><br><br><br>
      

      <div class="col-md-12">
      <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>時刻</th>
              <th>レベル</th>
              <th>実行ユーザ</th>
              <th>イベント内容</th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event[1] %></td>
                <td><%= event[0] %></td>
                <td><%= event[2] %></td>
                <td><%= event[3] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-12">
        <br><br>
        <%= link_to "更新", events_index_path, class: 'btn btn-primary' %>
      </div> 
    </div>
  </div>
</div>
    
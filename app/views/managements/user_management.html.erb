<div class="col-md-11 col-md-offset-1 text-right" >
  <%= link_to "新規ユーザ作成", new_user_path, class:"userList" %>
</div>
<hr color="#00f">
<br>
<b>＜＜＜ユーザ一覧＞＞＞</b>
<br><br>
<div class="col-md-12">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>ユーザ</th>
      <th>E-mail</th>
      <th>権限</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>設定なし</td>
        <td><%= link_to "編集", edit_user_path(id: user.id) %></td>
        <% if current_user.id != user.id %>
          <td><%= link_to "削除", user_delete_path(id: user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        <% else %>
          <td>-</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>